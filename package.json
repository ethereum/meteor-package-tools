{
  "name": "ethtools",
  "version": "0.0.1",
  "description": "Formatting and value conversion for ethereum currencies.",
  "main": "index.js",
  "scripts": {
    "test": "npm run travis",
    "prettier": "prettier-eslint --write --list-different  \"@(src|test)/**/*.js\"",
    "pretest": "npm run lint",
    "travis": "npm run build && npm run test:only",
    "test:only": "npm run mocha test",
    "test:all": "npm run test:only",
    "lint": "eslint --ext js src test",
    "prepublish": "npm run build && safe-publish-latest",
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir build --source-maps",
    "postbuild": "npm run build:index",
    "prebuild:index": "cp index.js .index.js",
    "build:index": "babel index.js --out-file index.js --no-babelrc --source-maps",
    "postbuild:index": "mv .index.js index.js",
    "cover:clean": "rimraf coverage",
    "cover:run": "nyc --show-process-tree npm run --silent mocha test -- --reporter=dot",
    "precoverage": "NODE_ENV=test npm run build",
    "coverage": "npm run --quiet cover:clean && npm run --silent cover:run",
    "mocha": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lutangar/ethtools.git"
  },
  "keywords": [
    "ether",
    "ethereum",
    "format",
    "crypto",
    "currency",
    "formatBalance",
    "wei",
    "bignumber",
    "ethtools",
    "locale",
    "web3"
  ],
  "author": "lutangar <johan.dufour@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lutangar/ethtools/issues"
  },
  "homepage": "https://github.com/lutangar/ethtools#readme",
  "dependencies": {
    "bignumber.js": "^4.0.4",
    "bn.js": "^4.11.8",
    "es6-promise": "^4.1.1",
    "isomorphic-fetch": "^2.2.1",
    "numeral": "^2.0.6",
    "web3": "^1.0.0-beta.18"
  },
  "devDependencies": {
    "airbnb-js-shims": "^1.3.0",
    "babel-cli": "^6.24.1",
    "babel-core": "~6.26.0",
    "babel-eslint": "~7.2.2",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-replace-object-assign": "^0.2.1",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-airbnb": "^2.4.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.2.0",
    "ethjs-unit": "^0.1.6",
    "mocha": "^3.5.0",
    "mock-env": "^0.2.0",
    "nyc": "^10.3.2",
    "prettier": "^1.5.2",
    "prettier-eslint-cli": "^4.1.1",
    "react": "^16.0.0-alpha.12",
    "rimraf": "^2.6.1",
    "safe-publish-latest": "^1.1.1"
  }
}
